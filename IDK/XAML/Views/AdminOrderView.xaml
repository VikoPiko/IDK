<Window x:Class="IDK.XAML.Views.AdminOrderView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IDK.XAML.Views"
               xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="OrderVision" Height="450" Width="800">
    <Border
        BorderThickness="2"
        CornerRadius="10">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#7161EF" Offset="0"/>
                <GradientStop Color="#957FEF" Offset="0.5"/>
                <GradientStop Color="#B79CED" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Border.Background>
            <LinearGradientBrush StartPoint="0.1,0.7" EndPoint="1,0">
                <GradientStop Color="#7161EF" Offset="0"/>
                <GradientStop Color="#5F4B66" Offset="0.75"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel x:Name="pnlControlBar"
                            Grid.Row="0"
                            Orientation="Horizontal"
                            FlowDirection="RightToLeft"
                            Background="Transparent"
                            Margin="0,0,5,0"
                            MouseLeftButtonDown="pnlControlBar_MouseLeftButtonDown">

                <Button Name="btnClose"
                            Style="{StaticResource controlButton}"
                            Click="btnClose_Click">
                    <fa:IconImage Icon="Xmark"
                                              Style="{StaticResource controlButtonIcon}"/>
                </Button>
                <Button Name="btnMaximize"
                            Style="{StaticResource controlButton}"
                            Click="btnMaximize_Click">
                    <fa:IconImage Icon="WindowMaximize"
                                              Style="{StaticResource controlButtonIcon}"/>
                </Button>
                <Button Name="btnMinimize"
                            Style="{StaticResource controlButton}"
                            Click="btnMinimize_Click">
                    <fa:IconImage Icon="WindowMinimize"
                                      Width="12"
                                      Style="{StaticResource controlButtonIcon}"/>
                </Button>

            </StackPanel>
            <StackPanel Grid.Row="1">
                <TextBlock Text="All Order Information"
                           Margin="0 0 0 10"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Foreground="#dbdbdb"
                           FontFamily="Montserrat">
                    <TextBlock.Effect>
                        <DropShadowEffect
                            ShadowDepth="4"
                            Direction="330"
                            Color="Black"
                            Opacity="0.5"
                            BlurRadius="4"/>
                    </TextBlock.Effect>
                </TextBlock>

                <CheckBox IsChecked="False"
                          Checked="IsOrderCompleteCheckBox_Checked"
                          Unchecked="IsOrderCompleteCheckBox_Unchecked"
                          Content="Complete"
                          FontSize="12"
                          FontWeight="Medium"
                          Foreground="White"
                          Name="IsOrderCompleteCheckBox"
                          HorizontalAlignment="Right"
                          Margin="0 0 80 0"/>

                <CheckBox IsChecked="False"
                          Checked="IsNotComplete_Checked"
                          Unchecked="IsNotComplete_Unchecked"
                          Content="Not Complete"
                          FontSize="12"
                          FontWeight="Medium"
                          Foreground="White"
                          Name="IsNotComplete"
                          HorizontalAlignment="Right"
                          Margin="0 -15 180 0"/>

                <ScrollViewer HorizontalScrollBarVisibility="Auto">
                    <ListBox Name="OrdersList" HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             BorderThickness="0"
                             Foreground="White"
                             Background="Transparent" d:ItemsSource="{d:SampleData ItemCount=5}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Left">
                                    <TextBlock Text="ID-" Margin="3" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Id}" Margin="3"  FontWeight="Bold"/>
                                    <TextBlock Text=" / " Margin="3" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding OrderPlaced}" Margin="3" FontWeight="Bold"/>
                                    <TextBlock Text=" / " Margin="3" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding OrderFullfiled}" Margin="3" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding CustomerId}" Margin="3" FontWeight="Bold"/>
                                    <TextBlock Text=" / " Margin="3" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding TotalPrice}" Margin="3" FontWeight="Bold"/>
                                    <TextBlock Text=" / " Margin="3" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding IsComplete}" Margin="3" FontWeight="Bold"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </StackPanel>
        </Grid>
    </Border>
</Window>